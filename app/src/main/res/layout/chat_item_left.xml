<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user_ico" />

    <TextView
        android:id="@+id/showMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:padding="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/round_chat_item_left"/>

    <TextView
        android:id="@+id/statusSeenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showMessage"
        android:layout_alignStart="@+id/profilePic"
        android:layout_alignEnd="@+id/showMessage"
        android:layout_marginStart="37dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-2dp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/white"/>
</RelativeLayout>