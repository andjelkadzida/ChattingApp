<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/showMessage"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profilePicture"
        android:layout_toEndOf="@+id/profilePicture"
        android:padding="8dp"
        android:background="@drawable/backgroud_left"
        android:text="@string/hello"/>

    <TextView
        android:id="@+id/statusSeenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showMessage"
        android:layout_alignStart="@+id/profilePicture"
        android:layout_alignLeft="@+id/profilePicture"
        android:layout_alignEnd="@+id/showMessage"
        android:layout_alignRight="@+id/showMessage"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:text="TextView"
        android:textSize="12sp"
        android:visibility="gone" />



</RelativeLayout>